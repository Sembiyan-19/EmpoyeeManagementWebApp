<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
	http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
  <servlet>
    <servlet-name>projectController</servlet-name>
    <servlet-class>
	  com.ideas2it.EmployeeManagementProject.projectManagement.controller.ProjectController
	</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>projectController</servlet-name>
    <url-pattern>/project</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>employeeController</servlet-name>
    <servlet-class>
      com.ideas2it.EmployeeManagementProject.employeeManagement.controller.EmployeeController
	</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>employeeController</servlet-name>
    <url-pattern>/employee</url-pattern>
  </servlet-mapping>
</web-app>